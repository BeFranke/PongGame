#:kivy 1.0.9
<PlayerWidget>
  size: 25, 200
  canvas:
    Rectangle:
      pos: self.pos
      size: self.size

<PlayerWidget>
  size: 25, 200
  canvas:
    Rectangle:
      pos: self.pos
      size: self.size

<PongBall>:
  size: 20, 20
  canvas:
    Ellipse:
      pos: self.pos
      size: self.size

<PongGame>:
  ball: pong_ball
  player1: player_1
  player2: player_2

  Label:
    font_size: 70
    center_x: root.width / 4
    top: root.top - 50
    text: str(root.player1.score)

  Label:
    font_size: 70
    center_x: root.width * 3 / 4
    top: root.top - 50
    text: str(root.player2.score)
  PongBall:
    id: pong_ball
    center: self.parent.center
  PlayerWidget:
    id: player_1
    center_x: root.width * 1/10
    center_y: root.height * 0.5
  PlayerWidget:
    id: player_2
    center_x: root.width * 9/10
    center_y: root.height * 0.5
  Label:
    center: root.center
    top: root.top - 200
    font_size: 70
    text: root.game_msg
  Label:
    center: root.center
    top: root.top - 300
    font_size: 30
    text: root.game_msg_expl
